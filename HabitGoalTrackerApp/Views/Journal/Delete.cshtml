@model HabitGoalTrackerApp.Models.ViewModels.JournalEntryDetailsViewModel

@{
    ViewData["Title"] = "Delete Journal Entry";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h3 class="card-title mb-0">
                    <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="me-2">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.464 0L4.35 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                    </svg>
                    Delete Journal Entry
                </h3>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <svg width="20" height="20" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="me-2">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 9v2m0 4h.01m-6.938 4h13.856c1.54 0 2.502-1.667 1.732-2.5L13.732 4c-.77-.833-1.732-.833-2.464 0L4.35 16.5c-.77.833.192 2.5 1.732 2.5z"></path>
                    </svg>
                    <strong>Warning!</strong> This action cannot be undone. Your journal entry will be permanently deleted.
                </div>

                <h4 class="mb-3">Are you sure you want to delete this journal entry?</h4>

                <!-- Entry Preview -->
                <div class="entry-preview p-3 bg-light rounded mb-4">
                    <div class="d-flex align-items-center mb-3">
                        <div class="mood-indicator me-3" style="color: @Model.MoodColor;">
                            @Model.MoodEmoji
                        </div>
                        <div>
                            <h5 class="mb-1">@Model.Title</h5>
                            <small class="text-muted">@Model.CreatedAt.ToString("MMMM dd, yyyy 'at' h:mm tt")</small>
                        </div>
                    </div>

                    <div class="entry-content-preview">
                        <p class="text-muted mb-2">
                            @(Model.Content.Length > 200 ? Model.Content.Substring(0, 200) + "..." : Model.Content)
                        </p>
                    </div>

                    @if (Model.Tags.Any())
                    {
                        <div class="entry-tags">
                            @foreach (var tag in Model.Tags)
                            {
                                <span class="badge bg-secondary me-1">#@tag</span>
                            }
                        </div>
                    }

                    <div class="entry-stats mt-2">
                        <small class="text-muted">
                            @Model.WordCount words • @Model.CharacterCount characters
                            @if (Model.IsFavorite)
                            {
                                <span class="ms-2">
                                    <svg width="12" height="12" fill="currentColor" viewBox="0 0 24 24" class="text-warning">
                                        <path d="M12 2l3.09 6.26L22 9.27l-5 4.87 1.18 6.88L12 17.77l-6.18 3.25L7 14.14 2 9.27l6.91-1.01L12 2z"></path>
                                    </svg>
                                    Favorite
                                </span>
                            }
                        </small>
                    </div>
                </div>

                <form asp-action="Delete" method="post">
                    <input asp-for="Id" type="hidden" />
                    <div class="d-flex gap-3">
                        <button type="submit" class="btn btn-danger">
                            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="me-2">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                            </svg>
                            Yes, Delete Entry
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-secondary">
                            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="me-2">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
                            </svg>
                            Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<style>
    .entry-preview {
        border: 1px solid var(--border-color);
    }

    .mood-indicator {
        font-size: 1.5rem;
    }

    .entry-content-preview {
        max-height: 150px;
        overflow: hidden;
    }

    .entry-tags .badge {
        font-size: 0.7rem;
    }
</style>