@model HabitGoalTrackerApp.Models.ViewModels.EditGoalViewModel

@{
    ViewData["Title"] = $"Edit - {Model.Title}";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title mb-0">
                    <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="me-2">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
                    </svg>
                    Edit Goal
                </h3>
            </div>
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    <input type="hidden" asp-for="Id" />
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label asp-for="Title" class="form-label fw-semibold">Goal Title *</label>
                                <input asp-for="Title" class="form-control form-control-lg" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label fw-semibold">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="TargetValue" class="form-label fw-semibold">Target Value *</label>
                                        <input asp-for="TargetValue" type="number" step="0.01" class="form-control" />
                                        <span asp-validation-for="TargetValue" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="Unit" class="form-label fw-semibold">Unit</label>
                                        <input asp-for="Unit" class="form-control" />
                                        <span asp-validation-for="Unit" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="TargetDate" class="form-label fw-semibold">Target Date</label>
                                        <input asp-for="TargetDate" type="date" class="form-control" />
                                        <span asp-validation-for="TargetDate" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="Category" class="form-label fw-semibold">Category</label>
                                        <select asp-for="Category" class="form-select">
                                            <option value="0">Personal</option>
                                            <option value="1">Health</option>
                                            <option value="2">Career</option>
                                            <option value="3">Education</option>
                                            <option value="4">Finance</option>
                                            <option value="5">Fitness</option>
                                            <option value="6">Hobby</option>
                                            <option value="7">Travel</option>
                                            <option value="8">Relationship</option>
                                            <option value="9">Other</option>
                                        </select>
                                        <span asp-validation-for="Category" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <!-- Current Progress Info -->
                            <div class="current-progress-info">
                                <h6 class="fw-semibold mb-3">Current Progress</h6>
                                <div class="alert alert-info">
                                    <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="me-2">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                                    </svg>
                                    <strong>Note:</strong> To modify your current progress, use the "Add Progress" feature on the goal details page.
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Preview -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">Preview</label>
                        <div class="goal-preview p-3 border rounded-3">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <h6 class="mb-1" id="previewTitle">@Model.Title</h6>
                                    <small class="text-muted" id="previewDescription">@Model.Description</small>
                                    <div class="mt-2">
                                        <span class="category-badge" id="previewCategory">@Model.Category</span>
                                    </div>
                                </div>
                                <div class="text-end">
                                    <div class="h5 mb-0" id="previewProgress">0/@Model.TargetValue</div>
                                    <small class="text-muted" id="previewUnit">@Model.Unit</small>
                                </div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-3">
                        <button type="submit" class="btn btn-primary">
                            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="me-2">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            Save Changes
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.Id" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Live preview updates
        const titleInput = document.getElementById('Title');
        const descriptionInput = document.getElementById('Description');
        const targetValueInput = document.getElementById('TargetValue');
        const unitInput = document.getElementById('Unit');
        const categorySelect = document.getElementById('Category');

        [titleInput, descriptionInput, targetValueInput, unitInput, categorySelect].forEach(input => {
            if (input) {
                input.addEventListener('input', updatePreview);
            }
        });

        function updatePreview() {
            const title = titleInput?.value || 'Goal title';
            const description = descriptionInput?.value || 'Description';
            const targetValue = parseFloat(targetValueInput?.value) || 0;
            const unit = unitInput?.value || 'units';
            const categoryValue = categorySelect?.value || '0';

            const categories = {
                '0': 'Personal', '1': 'Health', '2': 'Career', '3': 'Education',
                '4': 'Finance', '5': 'Fitness', '6': 'Hobby', '7': 'Travel',
                '8': 'Relationship', '9': 'Other'
            };

            const categoryColors = {
                '0': 'personal', '1': 'health', '2': 'career', '3': 'education',
                '4': 'finance', '5': 'fitness', '6': 'hobby', '7': 'travel',
                '8': 'relationship', '9': 'other'
            };

            document.getElementById('previewTitle').textContent = title;
            document.getElementById('previewDescription').textContent = description;
            document.getElementById('previewProgress').textContent = `0/${targetValue}`;
            document.getElementById('previewUnit').textContent = unit;

            const categoryBadge = document.getElementById('previewCategory');
            categoryBadge.textContent = categories[categoryValue];
            categoryBadge.className = `category-badge category-${categoryColors[categoryValue]}`;
        }

        updatePreview();
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .goal-preview {
        background-color: var(--bg-secondary);
    }

    .current-progress-info {
        background-color: var(--bg-secondary);
        border-radius: 0.5rem;
        padding: 1rem;
    }

    .category-badge {
        font-size: 0.75rem;
        padding: 0.25rem 0.5rem;
        border-radius: 0.375rem;
        font-weight: 500;
        background-color: var(--gray-100);
        color: var(--gray-700);
    }

    .category-health {
        background-color: #dcfce7;
        color: #166534;
    }

    .category-career {
        background-color: #dbeafe;
        color: #1e40af;
    }

    .category-finance {
        background-color: #fef3c7;
        color: #92400e;
    }

    .category-fitness {
        background-color: #fce7f3;
        color: #be185d;
    }

    .category-education {
        background-color: #e0e7ff;
        color: #3730a3;
    }

    .category-hobby {
        background-color: #f3e8ff;
        color: #6b21a8;
    }

    .category-travel {
        background-color: #ecfdf5;
        color: #047857;
    }

    .category-relationship {
        background-color: #fef2f2;
        color: #dc2626;
    }
</style>