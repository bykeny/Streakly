@model HabitGoalTrackerApp.Models.ViewModels.CreateGoalViewModel
@using HabitGoalTrackerApp.Models.ViewModels

@{
    ViewData["Title"] = "Create New Goal";
}

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h3 class="card-title mb-0">
                    <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="me-2">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z"></path>
                    </svg>
                    Create New Goal
                </h3>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <div asp-validation-summary="ModelOnly" class="alert alert-danger" role="alert"></div>

                    <div class="row">
                        <div class="col-md-8">
                            <div class="mb-3">
                                <label asp-for="Title" class="form-label fw-semibold">Goal Title *</label>
                                <input asp-for="Title" class="form-control form-control-lg" placeholder="e.g., Read 12 books this year" />
                                <span asp-validation-for="Title" class="text-danger"></span>
                            </div>

                            <div class="mb-3">
                                <label asp-for="Description" class="form-label fw-semibold">Description</label>
                                <textarea asp-for="Description" class="form-control" rows="3" placeholder="Why is this goal important to you? What will achieving it mean?"></textarea>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="TargetValue" class="form-label fw-semibold">Target Value *</label>
                                        <input asp-for="TargetValue" type="number" step="0.01" class="form-control" placeholder="12" />
                                        <span asp-validation-for="TargetValue" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="Unit" class="form-label fw-semibold">Unit</label>
                                        <input asp-for="Unit" class="form-control" placeholder="books, pounds, hours, etc." />
                                        <span asp-validation-for="Unit" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>

                            <div class="row">
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="CurrentValue" class="form-label fw-semibold">Current Progress</label>
                                        <input asp-for="CurrentValue" type="number" step="0.01" class="form-control" placeholder="0" />
                                        <span asp-validation-for="CurrentValue" class="text-danger"></span>
                                        <div class="form-text">How much have you already achieved?</div>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="mb-3">
                                        <label asp-for="TargetDate" class="form-label fw-semibold">Target Date</label>
                                        <input asp-for="TargetDate" type="date" class="form-control" />
                                        <span asp-validation-for="TargetDate" class="text-danger"></span>
                                        <div class="form-text">When do you want to achieve this goal?</div>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <!-- Category Selection -->
                            <div class="mb-3">
                                <label asp-for="Category" class="form-label fw-semibold">Category</label>
                                <select asp-for="Category" class="form-select">
                                    <option value="@((int)GoalCategory.Personal)">Personal</option>
                                    <option value="@((int)GoalCategory.Health)">Health</option>
                                    <option value="@((int)GoalCategory.Career)">Career</option>
                                    <option value="@((int)GoalCategory.Education)">Education</option>
                                    <option value="@((int)GoalCategory.Finance)">Finance</option>
                                    <option value="@((int)GoalCategory.Fitness)">Fitness</option>
                                    <option value="@((int)GoalCategory.Hobby)">Hobby</option>
                                    <option value="@((int)GoalCategory.Travel)">Travel</option>
                                    <option value="@((int)GoalCategory.Relationship)">Relationship</option>
                                    <option value="@((int)GoalCategory.Other)">Other</option>
                                </select>
                                <span asp-validation-for="Category" class="text-danger"></span>
                            </div>

                            <!-- Goal Examples -->
                            <div class="goal-examples">
                                <h6 class="fw-semibold mb-3">Goal Examples</h6>
                                <div class="example-goals">
                                    <div class="example-goal" data-title="Read 12 books this year" data-target="12" data-unit="books" data-category="@((int)GoalCategory.Education)">
                                        <div class="example-icon">📚</div>
                                        <div class="example-text">
                                            <div class="example-title">Read 12 books</div>
                                            <div class="example-desc">Education goal</div>
                                        </div>
                                    </div>
                                    <div class="example-goal" data-title="Lose 20 pounds" data-target="20" data-unit="pounds" data-category="@((int)GoalCategory.Health)">
                                        <div class="example-icon">⚖️</div>
                                        <div class="example-text">
                                            <div class="example-title">Lose 20 pounds</div>
                                            <div class="example-desc">Health goal</div>
                                        </div>
                                    </div>
                                    <div class="example-goal" data-title="Save $5000" data-target="5000" data-unit="dollars" data-category="@((int)GoalCategory.Finance)">
                                        <div class="example-icon">💰</div>
                                        <div class="example-text">
                                            <div class="example-title">Save $5000</div>
                                            <div class="example-desc">Finance goal</div>
                                        </div>
                                    </div>
                                    <div class="example-goal" data-title="Run 500 miles" data-target="500" data-unit="miles" data-category="@((int)GoalCategory.Fitness)">
                                        <div class="example-icon">🏃</div>
                                        <div class="example-text">
                                            <div class="example-title">Run 500 miles</div>
                                            <div class="example-desc">Fitness goal</div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <!-- Preview -->
                    <div class="mb-4">
                        <label class="form-label fw-semibold">Preview</label>
                        <div class="goal-preview p-3 border rounded-3">
                            <div class="d-flex align-items-center justify-content-between">
                                <div>
                                    <h6 class="mb-1" id="previewTitle">Your goal title will appear here</h6>
                                    <small class="text-muted" id="previewDescription">Your description will appear here</small>
                                    <div class="mt-2">
                                        <span class="category-badge" id="previewCategory">Personal</span>
                                    </div>
                                </div>
                                <div class="text-end">
                                    <div class="h5 mb-0" id="previewProgress">0/0</div>
                                    <small class="text-muted" id="previewUnit">units</small>
                                </div>
                            </div>
                            <div class="progress mt-3" style="height: 8px;">
                                <div class="progress-bar bg-primary" id="previewProgressBar" style="width: 0%"></div>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex gap-3">
                        <button type="submit" class="btn btn-primary">
                            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="me-2">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
                            </svg>
                            Create Goal
                        </button>
                        <a asp-action="Index" class="btn btn-outline-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<script>
    document.addEventListener('DOMContentLoaded', function() {
        // Example goal click handlers
        document.querySelectorAll('.example-goal').forEach(example => {
            example.addEventListener('click', function() {
                const title = this.dataset.title;
                const target = this.dataset.target;
                const unit = this.dataset.unit;
                const category = this.dataset.category;

                document.getElementById('Title').value = title;
                document.getElementById('TargetValue').value = target;
                document.getElementById('Unit').value = unit;
                document.getElementById('Category').value = category;

                updatePreview();
            });
        });

        // Live preview updates
        const titleInput = document.getElementById('Title');
        const descriptionInput = document.getElementById('Description');
        const targetValueInput = document.getElementById('TargetValue');
        const currentValueInput = document.getElementById('CurrentValue');
        const unitInput = document.getElementById('Unit');
        const categorySelect = document.getElementById('Category');

        [titleInput, descriptionInput, targetValueInput, currentValueInput, unitInput, categorySelect].forEach(input => {
            if (input) {
                input.addEventListener('input', updatePreview);
            }
        });

        function updatePreview() {
            const title = titleInput?.value || 'Your goal title will appear here';
            const description = descriptionInput?.value || 'Your description will appear here';
            const targetValue = parseFloat(targetValueInput?.value) || 0;
            const currentValue = parseFloat(currentValueInput?.value) || 0;
            const unit = unitInput?.value || 'units';
            const categoryValue = categorySelect?.value || '0';

            const categories = {
                '0': 'Personal', '1': 'Health', '2': 'Career', '3': 'Education',
                '4': 'Finance', '5': 'Fitness', '6': 'Hobby', '7': 'Travel',
                '8': 'Relationship', '9': 'Other'
            };

            const categoryColors = {
                '0': 'personal', '1': 'health', '2': 'career', '3': 'education',
                '4': 'finance', '5': 'fitness', '6': 'hobby', '7': 'travel',
                '8': 'relationship', '9': 'other'
            };

            document.getElementById('previewTitle').textContent = title;
            document.getElementById('previewDescription').textContent = description;
            document.getElementById('previewProgress').textContent = `${currentValue}/${targetValue}`;
            document.getElementById('previewUnit').textContent = unit;

            const categoryBadge = document.getElementById('previewCategory');
            categoryBadge.textContent = categories[categoryValue];
            categoryBadge.className = `category-badge category-${categoryColors[categoryValue]}`;

            const progressPercentage = targetValue > 0 ? Math.min((currentValue / targetValue) * 100, 100) : 0;
            document.getElementById('previewProgressBar').style.width = `${progressPercentage}%`;
        }

        // Initialize preview
        updatePreview();
    });
</script>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}

<style>
    .goal-preview {
        background-color: var(--bg-secondary);
    }

    .goal-examples {
        background-color: var(--bg-secondary);
        border-radius: 0.5rem;
        padding: 1rem;
    }

    .example-goal {
        display: flex;
        align-items: center;
        padding: 0.75rem;
        border-radius: 0.5rem;
        cursor: pointer;
        transition: all 0.2s ease;
        margin-bottom: 0.5rem;
    }

        .example-goal:hover {
            background-color: var(--bg-primary);
            transform: translateY(-1px);
        }

        .example-goal:last-child {
            margin-bottom: 0;
        }

    .example-icon {
        font-size: 1.5rem;
        margin-right: 0.75rem;
    }

    .example-title {
        font-weight: 500;
        font-size: 0.875rem;
    }

    .example-desc {
        font-size: 0.75rem;
        color: var(--text-muted);
    }

    .category-badge {
        font-size: 0.75rem;
        padding: 0.25rem 0.5rem;
        border-radius: 0.375rem;
        font-weight: 500;
        background-color: var(--gray-100);
        color: var(--gray-700);
    }

    .category-personal {
        background-color: var(--gray-100);
        color: var(--gray-700);
    }

    .category-health {
        background-color: #dcfce7;
        color: #166534;
    }

    .category-career {
        background-color: #dbeafe;
        color: #1e40af;
    }

    .category-finance {
        background-color: #fef3c7;
        color: #92400e;
    }

    .category-fitness {
        background-color: #fce7f3;
        color: #be185d;
    }

    .category-education {
        background-color: #e0e7ff;
        color: #3730a3;
    }

    .category-hobby {
        background-color: #f3e8ff;
        color: #6b21a8;
    }

    .category-travel {
        background-color: #ecfdf5;
        color: #047857;
    }

    .category-relationship {
        background-color: #fef2f2;
        color: #dc2626;
    }

    .category-other {
        background-color: var(--gray-100);
        color: var(--gray-700);
    }
</style>