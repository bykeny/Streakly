@using Microsoft.AspNetCore.Identity
@using HabitGoalTrackerApp.Models

@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

<ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        var user = await UserManager.GetUserAsync(User);
        <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle d-flex align-items-center" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                <div class="user-avatar me-2">
                    @if (!string.IsNullOrEmpty(user?.ProfileImagePath))
                    {
                        <img src="@user.ProfileImagePath" alt="Profile" class="rounded-circle img-fluid" style="width: 24px; height: 24px; object-fit: cover;">
                    }
                    else
                    {
                        <svg width="24" height="24" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                        </svg>
                    }
                </div>
                Hello, @user?.FullName!
            </a>
            <ul class="dropdown-menu">
                <li>
                    <a class="dropdown-item profile-item d-flex flex-column align-items-start" asp-controller="Profile" asp-action="Index" title="Manage">
                        <div class="d-flex align-items-center w-100">
                            <svg class="me-2" width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z"></path>
                            </svg>
                            <span class="fw-medium">Profile</span>
                        </div>
                        <small class="text-muted description-text">Manage your account settings</small>
                    </a>
                </li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form class="form-inline" asp-controller="Auth" asp-action="Logout" asp-route-returnUrl="@Url.Action("Index", "Home")">
                        <button type="submit" class="dropdown-item logout-item d-flex flex-column align-items-start w-100 text-start border-0 bg-transparent">
                            <div class="d-flex align-items-center w-100">
                                <svg class="me-2" width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17 16l4-4m0 0l-4-4m4 4H7m6 4v1a3 3 0 01-3 3H6a3 3 0 01-3-3V7a3 3 0 013-3h4a3 3 0 013 3v1"></path>
                                </svg>
                                <span class="fw-medium">Logout</span>
                            </div>
                            <small class="text-muted description-text">Sign out of your account</small>
                        </button>
                    </form>
                </li>
            </ul>
        </li>
    }
    else
    {
        <li class="nav-item">
            <a class="nav-link" asp-controller="Auth" asp-action="Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" asp-controller="Auth" asp-action="Login">Login</a>
        </li>
    }
</ul>