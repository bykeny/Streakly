@model HabitGoalTrackerApp.Models.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "My Profile";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2 mb-1">My Profile</h1>
        <p class="text-muted mb-0">Manage your account settings and preferences</p>
    </div>
    <div class="d-flex gap-2">
        <a asp-action="Edit" class="btn btn-primary">
            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="me-2">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M11 5H6a2 2 0 00-2 2v11a2 2 0 002 2h11a2 2 0 002-2v-5m-1.414-9.414a2 2 0 112.828 2.828L11.828 15H9v-2.828l8.586-8.586z"></path>
            </svg>
            Edit Profile
        </a>
        <a asp-action="ChangePassword" class="btn btn-outline-secondary">
            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="me-2">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v-2l-4.257-4.257A6 6 0 0117 9z"></path>
            </svg>
            Change Password
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<div class="row">
    <!-- Profile Image -->
    <div class="col-lg-4 mb-4">
        <div class="card text-center">
            <div class="card-body">
                <div class="mb-3">
                    @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
                    {
                        <img src="@Model.ProfileImagePath" alt="Profile Image" class="rounded-circle img-fluid" style="max-width: 150px; height: auto; object-fit: cover;">
                    }
                    else
                    {
                        <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center profile-placeholder">
                            <svg width="64" height="64" fill="currentColor" viewBox="0 0 24 24" class="text-muted">
                                <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                            </svg>
                        </div>
                    }
                </div>
                <h5 class="card-title">@Model.FullName</h5>
                <p class="text-muted">@Model.Email</p>
            </div>
        </div>
    </div>

    <!-- Profile Information -->
    <div class="col-lg-8">
        <div class="card mb-4">
            <div class="card-header">
                <h5 class="card-title mb-0">Profile Information</h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted">First Name</label>
                        <p class="mb-0 fw-medium">@Model.FirstName</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted">Last Name</label>
                        <p class="mb-0 fw-medium">@Model.LastName</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted">Email</label>
                        <p class="mb-0 fw-medium">@Model.Email</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted">Phone Number</label>
                        <p class="mb-0 fw-medium">@(Model.PhoneNumber ?? "Not provided")</p>
                    </div>
                    @if (!string.IsNullOrEmpty(Model.Bio))
                    {
                        <div class="col-12 mb-3">
                            <label class="form-label text-muted">Bio</label>
                            <p class="mb-0">@Model.Bio</p>
                        </div>
                    }
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted">Member Since</label>
                        <p class="mb-0 fw-medium">@Model.CreatedAt.ToString("MMMM dd, yyyy")</p>
                    </div>
                    <div class="col-md-6 mb-3">
                        <label class="form-label text-muted">Last Login</label>
                        <p class="mb-0 fw-medium">@(Model.LastLoginAt?.ToString("MMMM dd, yyyy") ?? "Never")</p>
                    </div>
                </div>
            </div>
        </div>

        <!-- Preferences and Statistics -->
        <div class="row">

            <div class="col-12 mb-4">
                <!-- Statistics -->
                <div class="card">
                    <div class="card-header">
                        <h5 class="card-title mb-0">Your Statistics</h5>
                    </div>
                    <div class="card-body">
                        <div class="row">
                            <div class="col-md-3 mb-3">
                                <div class="stat-item text-center">
                                    <div class="h2 mb-1 text-primary">@Model.TotalHabits</div>
                                    <div class="text-muted">Total Habits</div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="stat-item text-center">
                                    <div class="h2 mb-1 text-info">@Model.TotalGoals</div>
                                    <div class="text-muted">Total Goals</div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="stat-item text-center">
                                    <div class="h2 mb-1 text-success">@Model.CompletedGoals</div>
                                    <div class="text-muted">Completed Goals</div>
                                </div>
                            </div>
                            <div class="col-md-3 mb-3">
                                <div class="stat-item text-center">
                                    <div class="h2 mb-1 text-warning">@Model.CurrentStreak</div>
                                    <div class="text-muted">Current Streak</div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .stat-item {
        padding: 0.75rem 0;
        border-bottom: 1px solid var(--border-color);
    }

        .stat-item:last-child {
            border-bottom: none;
            padding-bottom: 0;
        }

    .profile-placeholder {
        width: 150px;
        height: 150px;
        max-width: 100%;
    }
</style>