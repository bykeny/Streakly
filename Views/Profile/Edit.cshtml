@model HabitGoalTrackerApp.Models.ViewModels.ProfileViewModel

@{
    ViewData["Title"] = "Edit Profile";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h1 class="h2 mb-1">Edit Profile</h1>
        <p class="text-muted mb-0">Update your account information and preferences</p>
    </div>
    <div>
        <a asp-action="Index" class="btn btn-outline-secondary">
            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="me-2">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"></path>
            </svg>
            Back to Profile
        </a>
    </div>
</div>

@if (TempData["SuccessMessage"] != null)
{
    <div class="alert alert-success alert-dismissible fade show" role="alert">
        @TempData["SuccessMessage"]
        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
    </div>
}

<form asp-action="Edit" method="post" enctype="multipart/form-data">
    <div class="row">
        <!-- Profile Image -->
        <div class="col-lg-4 mb-4">
            <div class="card text-center">
                <div class="card-body">
                    <div class="mb-3">
                        @if (!string.IsNullOrEmpty(Model.ProfileImagePath))
                        {
                            <img src="@Model.ProfileImagePath" alt="Current Profile Image" class="rounded-circle img-fluid" style="width: 150px; height: 150px; object-fit: cover;">
                        }
                        else
                        {
                            <div class="bg-light rounded-circle d-inline-flex align-items-center justify-content-center" style="width: 150px; height: 150px;">
                                <svg width="64" height="64" fill="currentColor" viewBox="0 0 24 24" class="text-muted">
                                    <path d="M12 12c2.21 0 4-1.79 4-4s-1.79-4-4-4-4 1.79-4 4 1.79 4 4 4zm0 2c-2.67 0-8 1.34-8 4v2h16v-2c0-2.66-5.33-4-8-4z"/>
                                </svg>
                            </div>
                        }
                    </div>
                    <div class="mb-3">
                        <label for="ProfileImageFile" class="form-label">Upload New Profile Image</label>
                        <input type="file" class="form-control" id="ProfileImageFile" name="ProfileImageFile" accept=".jpg,.jpeg,.png">
                        <div class="form-text">Supported formats: JPEG, PNG. Max size: 2MB</div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Profile Information -->
        <div class="col-lg-8">
            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="card-title mb-0">Profile Information</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="FirstName" class="form-label"></label>
                            <input asp-for="FirstName" class="form-control" />
                            <span asp-validation-for="FirstName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="LastName" class="form-label"></label>
                            <input asp-for="LastName" class="form-control" />
                            <span asp-validation-for="LastName" class="text-danger"></span>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="Email" class="form-label"></label>
                            <input asp-for="Email" class="form-control" readonly />
                            <div class="form-text">Email cannot be changed here. Contact support if needed.</div>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="PhoneNumber" class="form-label"></label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        <div class="col-12 mb-3">
                            <label asp-for="Bio" class="form-label"></label>
                            <textarea asp-for="Bio" class="form-control" rows="3"></textarea>
                            <span asp-validation-for="Bio" class="text-danger"></span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Preferences -->
            <div class="card">
                <div class="card-header">
                    <h5 class="card-title mb-0">Preferences</h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6 mb-3">
                            <label asp-for="TimeZone" class="form-label"></label>
                            <select asp-for="TimeZone" class="form-select">
                                <option value="">Select Time Zone</option>
                                <option value="Pacific Standard Time">(UTC-8) Pacific Time</option>
                                <option value="Mountain Standard Time">(UTC-7) Mountain Time</option>
                                <option value="Central Standard Time">(UTC-6) Central Time</option>
                                <option value="Eastern Standard Time">(UTC-5) Eastern Time</option>
                                <option value="UTC">UTC</option>
                                <option value="GMT Standard Time">(UTC+0) GMT</option>
                                <option value="Central European Standard Time">(UTC+1) Central European Time</option>
                                <option value="E. Europe Standard Time">(UTC+2) Eastern European Time</option>
                                <option value="Arabian Standard Time">(UTC+4) Arabian Time</option>
                                <option value="India Standard Time">(UTC+5:30) India Time</option>
                                <option value="China Standard Time">(UTC+8) China Time</option>
                                <option value="Japan Standard Time">(UTC+9) Japan Time</option>
                                <option value="AUS Eastern Standard Time">(UTC+10) Australian Eastern Time</option>
                            </select>
                        </div>
                        <div class="col-md-6 mb-3">
                            <label asp-for="DateFormat" class="form-label"></label>
                            <select asp-for="DateFormat" class="form-select">
                                <option value="MM/dd/yyyy">MM/dd/yyyy</option>
                                <option value="dd/MM/yyyy">dd/MM/yyyy</option>
                                <option value="yyyy-MM-dd">yyyy-MM-dd</option>
                            </select>
                        </div>
                    </div>

                    <h6 class="fw-semibold mb-3">Notifications</h6>
                    <div class="row">
                        <div class="col-md-4 mb-3">
                            <div class="form-check">
                                <input asp-for="EmailNotifications" class="form-check-input" />
                                <label asp-for="EmailNotifications" class="form-check-label"></label>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="form-check">
                                <input asp-for="DailyReminders" class="form-check-input" />
                                <label asp-for="DailyReminders" class="form-check-label"></label>
                            </div>
                        </div>
                        <div class="col-md-4 mb-3">
                            <div class="form-check">
                                <input asp-for="WeeklyReports" class="form-check-input" />
                                <label asp-for="WeeklyReports" class="form-check-label"></label>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <div class="d-flex justify-content-end mt-4">
        <button type="submit" class="btn btn-primary">
            <svg width="16" height="16" fill="none" stroke="currentColor" viewBox="0 0 24 24" class="me-2">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M5 13l4 4L19 7"></path>
            </svg>
            Save Changes
        </button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}